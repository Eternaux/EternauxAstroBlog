---
const { frontmatter, Content, content } = Astro.props;
---
<html lang="zh">
  <head>
    <title>{frontmatter.title} | Eternaux</title>
    <meta name="description" content={frontmatter.description} />
    <style>
      article {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: #222;
        line-height: 1.7;
        background: #fff;
      }
      article h1, article h2, article h3, article h4, article h5, article h6 {
        font-weight: 700;
        margin-top: 2em;
        margin-bottom: 1em;
        line-height: 1.2;
      }
      article h1 { font-size: 2.2em; }
      article h2 { font-size: 1.6em; }
      article h3 { font-size: 1.3em; }
      article p {
        margin: 1em 0;
        font-size: 1.1em;
      }
      article ul, article ol {
        margin: 1em 0 1em 2em;
        padding: 0;
      }
      article li {
        margin: 0.5em 0;
      }
      article pre {
        background: #f6f8fa;
        padding: 1em;
        border-radius: 6px;
        overflow-x: auto;
        font-size: 1em;
      }
      article code {
        background: #f6f8fa;
        padding: 0.2em 0.4em;
        border-radius: 4px;
        font-size: 0.95em;
        font-family: 'Fira Mono', 'Consolas', 'Menlo', monospace;
      }
      article img {
        max-width: 100%;
        border-radius: 8px;
        margin: 1.5em 0;
        display: block;
      }
      article blockquote {
        border-left: 4px solid #eee;
        color: #888;
        margin: 1em 0;
        padding: 0.5em 1em;
        background: #fafbfc;
        border-radius: 4px;
      }
      @media (max-width: 600px) {
        article {
          padding: 1em;
        }
      }
    </style>
  </head>
  <body>
    <article style="max-width: 800px; margin: 0 auto; padding: 2rem;">
      <h1>{frontmatter.title}</h1>
      <p style="color:#888;">{frontmatter.date}</p>
      {Content ? <Content /> : <Fragment set:html={content} />}
    </article>
  </body>
</html> 