---
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Eternaux` : 'Eternaux'}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      :root {
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --color-text: #333;
        --color-bg: #fff;
        --color-link: #0070f3;
        --max-width: 800px;
      }
      body {
        font-family: var(--font-sans);
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        margin: 0;
        padding: 0;
      }
      header {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        z-index: 100;
      }
      header h1 {
        margin: 0;
        font-size: 1.5rem;
      }
      header a {
        color: var(--color-text);
        text-decoration: none;
      }
      main {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1rem 4rem;
      }
      footer {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1rem;
        text-align: center;
        color: #666;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">Eternaux</a></h1>
      <nav>
        <a href="/" id="nav-home">首页</a>
        <a href="/blog" id="nav-blog">Blog</a>
      </nav>
    </header>
    <main>
      <div id="app-root"></div>
    </main>
    <footer>
      <p>© {new Date().getFullYear()} Eternaux</p>
    </footer>
  </body>
</html> 