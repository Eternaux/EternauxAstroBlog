---
// Props: title (string)
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Eternaux` : 'Eternaux'}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      :root {
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --color-text: #333;
        --color-bg: #fff;
        --color-link: #0070f3;
        --max-width: 800px;
      }
      
      body {
        font-family: var(--font-sans);
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        margin: 0;
        padding: 0;
      }

      header {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header h1 {
        margin: 0;
        font-size: 1.5rem;
      }

      header a {
        color: var(--color-text);
        text-decoration: none;
      }

      main {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1rem 4rem;
      }

      .post-list {
        list-style: none;
        padding: 0;
      }

      .post-item {
        margin-bottom: 2rem;
      }

      .post-item a {
        color: var(--color-text);
        text-decoration: none;
      }

      .post-item a:hover {
        color: var(--color-link);
      }

      .post-meta {
        color: #666;
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }

      .post-tags {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.5rem;
      }

      .post-tag {
        background: #f0f0f0;
        padding: 0.2rem 0.5rem;
        border-radius: 3px;
        font-size: 0.8rem;
        color: #666;
      }

      footer {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1rem;
        text-align: center;
        color: #666;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">Eternaux</a></h1>
      <nav>
        <a href="/blog">Blog</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>Â© {new Date().getFullYear()} Eternaux</p>
    </footer>
  </body>
</html> 