---
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogSPA from '../../components/BlogSPA.jsx';

// Get all markdown files in the blog directory
const posts = await Astro.glob('./*.md');
---
<BlogLayout title="文章">
  <section>
    <h2 style="margin-bottom:0.2em;">文章</h2>
    <p style="color:#666;margin-top:0;">我会写关于我感兴趣方向的文章</p>
    <BlogSPA client:load />
  </section>
  <style>
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }
    .post-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      overflow: hidden;
      text-decoration: none;
      color: inherit;
      transition: box-shadow 0.2s;
      display: flex;
      flex-direction: column;
    }
    .post-card:hover {
      box-shadow: 0 4px 16px rgba(0,0,0,0.10);
    }
    .post-card img {
      width: 100%;
      aspect-ratio: 16/9;
      object-fit: cover;
    }
    .post-card h3 {
      margin: 1rem 1rem 0.5rem 1rem;
      font-size: 1.2rem;
    }
    .post-card p {
      margin: 0 1rem 1rem 1rem;
      color: #666;
      font-size: 1rem;
    }
  </style>
</BlogLayout> 